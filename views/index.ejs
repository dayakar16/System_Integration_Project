                  <option name="DetectBrand" value="Detect Brand">Detect brand</option>
                  <option name="DetectColor" value="Detect Color">Detect Color</option>
                  <option name="DetectObjects" value="Detect Objects">Detect Objects</option>
                  <option name="DetectFaces" value="Detect Faces">Detect Faces</option>
                  <option name="DetectAdultContent" value="Detect Adult Content">Detect Adult Content</option>
                </select>
                <br><br>
                <label for="image">Please provide an image link here:</label>
                <input type="text" id="image" name="image" class = "fixed-width" required>
                <br><br>
                <button type="submit" value="Submit">Submit</button>
                </form>
              </div>
    </div>
